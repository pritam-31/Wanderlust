<% layout("/layouts/boilerplate") %>

    <!-- ek line me karne ke liye -->
    <style>
        /* Filter slider styles */
        .filters-wrap { position: relative; margin-top: 1rem; }
        .slides { overflow-x: hidden; }
        .slides-inner { display:flex; gap:1rem; align-items:center; padding:0.6rem; scroll-behavior:smooth; }

        #filters{ /* inner container */
            display: flex;
            flex-wrap: nowrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin: 0 1rem 0 0;
            opacity: 0.8;
            min-width: 88px;
            flex: 0 0 auto;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.2rem;
            padding: 0.6rem 0.9rem;
            margin-left: 1rem;
            display: flex;
            align-items: center;
            white-space: nowrap;
        }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255,255,255,0.95);
            border: 1px solid #ddd;
            padding: 0.3rem 0.6rem;
            border-radius: 0.3rem;
            cursor: pointer;
            box-shadow: 0 2px 6px rgba(0,0,0,0.06);
        }
        .prev { left: 0.2rem; }
        .next { right: 0.2rem; }

        .dots { text-align: center; margin-top: 0.6rem; }
        .dot { display: inline-block; width: 8px; height: 8px; border-radius: 50%; background: #ddd; margin: 0 .25rem; cursor: pointer; }
        .dot.active { background: #333; }

        @media(min-width:768px){
            .filter { margin: 2rem 1rem 0 0; }
        }
    </style>

