<!-- all form -> row  -->
<!-- all div -> col -->

<% layout("/layouts/boilerplate") %>

    

<div class="row mt-3">
    <div class="col-8 offset-2">
        <!-- <br><br> -->
    <h3>Create a New Listing</h3>
    <form 
        method="POST" 
        action="/listings" 
        novalidate 
        class="needs-validation"
        enctype="multipart/form-data"
    >
        <div class="mb-3">              <!-- (margin btn - 3) -->
            <label for="title" class="form-label">Title</label>
            <input 
                name="listing[title]" 
                placeholder="Add a catchy title" 
                type= "text" 
                class="form-control"
                required >
            <div class="invalid-feedback">
                Enter a Title!
            </div>
            <div class="valid-feedback">
                Title Looks good!
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea 
                name="listing[description]" class="form-control" 
                required></textarea>
                <div class="invalid-feedback">
                    Enter a short description!
                </div>
                <div class="valid-feedback">
                    Look better! 
                </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image
            </label>
            <input 
                name="listing[image]" 
                type="file"
                class="form-control"
                required
            >
        </div>

    <!-- (price & country) in a same Row  -->
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input 
                    name="listing[price]" 
                    placeholder=" 1200" 
                         
                    class="form-control"
                    required >
                    <div class="invalid-feedback">
                        Enter a valid Price!
                    </div>
                    <div class="valid-feedback">
                        it's okay!
                    </div>
            </div>
                
            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country
                </label>
                <input 
                    name="listing[country]" 
                    placeholder="India" 
                    type="text"
                    class="form-control"
                    required >
                    <div class="invalid-feedback">
                        Enter a valid Country!
                    </div>
                    <div class="valid-feedback">
                        Look good!
                    </div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location
            </label>
            <input 
                name="listing[location]"    
                placeholder="Jharsuguda, Odisha" 
                type="text"
                class="form-control" 
                required >
                <div class="invalid-feedback">
                    Enter the correct location!
                </div>
                <div class="valid-feedback">
                    Look better!
                </div>
        </div>
        
        <button class="btn btn-red add-btn mt-3">Add</button>
        
    </form>
    </div>
</div>


